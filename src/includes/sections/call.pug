section.call#callId
  h3.text-center Оставить заявку
  .container
    //- form(action="https://formspree.io/gv@betwinneraffiliates.com", method="POST", id="contact-form")
    form(action="https://formspree.io/gv@betwinneraffiliates.com", method="POST", id="contact-form")
      input( type="text", name="_gotcha", style="display:none")
      .form-row
        .form-group.col-md-5.offset-md-1
          input(type="text", name="name", class="form-control required", placeholder="Имя", id="name")
